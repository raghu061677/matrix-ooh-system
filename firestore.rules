
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSuperAdmin() {
      return request.auth.token.email == "raghu@matrix-networksolutions.com";
    }

    function isOwner(companyId) {
      return request.auth.token.companyId == companyId;
    }

    // Public read for media assets, but restricted write
    match /mediaAssets/{assetId} {
      allow read: if true;
      allow write: if isSuperAdmin() || isOwner(request.resource.data.companyId);
    }

    // Public can create enquiries, only owners can read them
    match /mediaEnquiries/{enquiryId} {
      allow create: if true;
      allow read, update, delete: if isSuperAdmin() || isOwner(resource.data.companyId);
    }

    // Users can read/update their own document.
    match /users/{userId} {
        allow read, update: if isSuperAdmin() || request.auth.uid == userId;
        // Create/delete might be admin-only operations
        allow create, delete: if isSuperAdmin();
    }
    
    // Rule for the 'entries' collection group used in Sales & PO Managers
    match /{path=**}/entries/{entry} {
      allow read, write: if isSuperAdmin() || isOwner(resource.data.companyId);
    }
    
    // Default rule for most other top-level collections
    match /{collection}/{docId} 
        where collection in ['companies', 'customers', 'plans', 'campaigns', 'creditNotes', 'recurringInvoices', 'counters', 'reports', 'operations'] {
      allow read, write: if isSuperAdmin() || isOwner(resource.data.companyId);
    }
  }
}
