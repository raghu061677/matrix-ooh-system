rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSuperAdmin() {
      return request.auth.token.email == 'raghu@matrix-networksolutions.com';
    }

    // Public read access for media assets for portfolio and explore pages
    match /mediaAssets/{assetId} {
      allow read: if true;
    }
    
    // Public write access for enquiries
    match /mediaEnquiries/{enquiryId} {
      allow write: if true;
    }

    // Allow any authenticated user to read their own user document
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
    }

    // General rule for all other collections.
    // This uses a recursive wildcard {path=**} to apply to all subcollections.
    // It grants access if the user's companyId matches the document's companyId OR if the user is a super admin.
    match /{path=**}/{collection}/{doc} {
      allow read, write: if request.auth != null && (isSuperAdmin() || request.auth.token.companyId == resource.data.companyId);
    }
  }
}
