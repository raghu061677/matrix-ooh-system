
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Function to check for Super Admin role
    function isSuperAdmin() {
      return request.auth.token.email == "raghu@matrix-networksolutions.com";
    }

    // Public read access for media assets
    match /mediaAssets/{assetId} {
      allow read: if true;
      allow write: if isSuperAdmin() || (request.auth != null && request.auth.token.companyId == resource.data.companyId);
    }

    // Public create access for enquiries
    match /mediaEnquiries/{enquiryId} {
      allow create: if true;
      allow read, update, delete: if isSuperAdmin() || (request.auth != null && request.auth.token.companyId == resource.data.companyId);
    }
    
    // Allow users to read their own user document
    match /users/{userId} {
      allow read: if isSuperAdmin() || (request.auth != null && request.auth.uid == userId);
      allow write: if isSuperAdmin() || (request.auth != null && request.auth.token.companyId == resource.data.companyId);
    }

    // Secure all other collections by companyId, but allow super admin full access
    match /{path=**}/{collection}/{doc} {
      allow read, write: if isSuperAmdin() || (request.auth != null && request.auth.token.companyId == resource.data.companyId);
    }
  }
}
